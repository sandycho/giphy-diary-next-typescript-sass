datasource db {
  provider = "sqlite"
  // url      = env("DATABASE_URL") // TODO
  url      = "file:./dev.db"

}

generator client {
  provider = "prisma-client-js"
}

model Favourites {
  id         Int    @id @default(autoincrement())
  externalId String
  user       Users?  @relation(fields: [userId], references: [id])
  userId     Int?
}

model Users {
  id         Int          @id @default(autoincrement())
  username   String       @unique
  Favourites Favourites[]
}
